<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    tools:context=".MyOrderActivity" >

    <com.example.happyfishing.view.ActionBarView
        android:id="@+id/actionBar_myorder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:layout_marginBottom="@dimen/x1"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.example.happyfishing.view.MBtn
            android:id="@+id/btn_myorder_finish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="已完成" />

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/x30"
            android:background="@color/gray_bg" />
        
        <com.example.happyfishing.view.MBtn
            android:id="@+id/btn_myorder_waitpay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="待支付" />
        <View
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/x30"
            android:background="@color/gray_bg" />
        
        <com.example.happyfishing.view.MBtn
            android:id="@+id/btn_myorder_after"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="已过期" />
        <View
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/x30"
            android:background="@color/gray_bg" />
        
        <com.example.happyfishing.view.MBtn
            android:id="@+id/btn_myorder_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="全部" />
    </LinearLayout>

    <ListView
        android:id="@+id/liv_myorder_sumary"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>