<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".VIPInfoActivity" >
    
    <com.example.happyfishing.view.ActionBarView
        android:id="@+id/actionBar_becomeVIP"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x20"
        android:orientation="vertical"
        android:gravity="center_horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x80"
            android:src="@drawable/quan3x" />
        
	</LinearLayout>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginBottom="@dimen/x20"
        android:orientation="horizontal"
        android:gravity="center_horizontal" >

        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F26665"
        android:textSize="@dimen/font_default"
        android:text="全年264天" />
        
        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_default"
        android:text="随心钓" />
        
	</LinearLayout>
	
    <RelativeLayout
        android:layout_width="@dimen/x120"
        android:layout_height="@dimen/x80"
        android:gravity="center_horizontal" >
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_alignParentRight="true"
            android:src="@drawable/zhuanxiang3x" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x80"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/diaoyuxu3x" />
        
	</RelativeLayout>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginBottom="@dimen/x20"
        android:gravity="center_horizontal" >

        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_default"
        android:text="钓鱼只需" />
        
        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F26665"
        android:textSize="@dimen/font_default"
        android:text="30元/次" />
        
	</LinearLayout>
	
    <RelativeLayout
        android:layout_width="@dimen/x120"
        android:layout_height="@dimen/x80"
        android:gravity="center_horizontal" >
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_alignParentRight="true"
            android:src="@drawable/zhuanxiang3x" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x80"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/shou3x" />
        
	</RelativeLayout>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x10"
        android:gravity="center_horizontal" >

        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_default"
        android:text="鱼获回收" />
        
        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_default"
        android:textColor="#F26665"
        android:text="5元/次" />
        
	</LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/x10"
        android:textSize="@dimen/font_default"
        android:text="随时随地预约钓位，和排队抽号说再见！" />

</LinearLayout>
