<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/x10"
    android:orientation="horizontal" >

    <com.example.happyfishing.image.ImageRequestView
        android:id="@+id/img_fishpit_itemshow"
        android:layout_width="@dimen/x70"
        android:layout_height="@dimen/x70"
        android:layout_marginRight="@dimen/x10"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <TextView
        android:id="@+id/tv_fishpit_itemshow_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x25"
        android:gravity="center_vertical"
        android:textSize="@dimen/font_big"
        android:text="我是鱼坑名" />

    <TextView
        android:id="@+id/tv_fishpit_itemshow_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:hint="我是渔坑简介我是渔坑简介我是渔坑简介我是渔坑简介我是渔坑简介我是渔坑简介我是渔坑简介我是渔坑简介" 
        android:textSize="@dimen/font_small"
        />

	</LinearLayout>

    

    <ImageView
        android:id="@+id/img_fishpit_itemshow_arrow"
        android:layout_width="@dimen/x20"
        android:layout_height="match_parent"
        android:src="@drawable/ic_arrows_right"
        android:paddingRight="@dimen/x10" />
    
</LinearLayout>