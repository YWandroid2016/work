<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical" >

    <com.example.happyfishing.view.ActionBarView
        android:id="@+id/actionbar_userinfo_alter_nickname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_marginTop="@dimen/x15"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x15" >

        <EditText
            android:id="@+id/ed_userinfo_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:hint="旧昵称" />

        <ImageView
            android:id="@+id/img_userinfo_quxiao"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x30"
            android:visibility="invisible"
            android:src="@drawable/qingchu3x" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginTop="@dimen/x10"
        android:text="4-20个字符，可由中英文、数字组成"
        android:textColor="@color/textcolor_default" />

</LinearLayout>