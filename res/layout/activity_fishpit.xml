                android:id="@+id/edt_fishpit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="true"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:visibility="invisible" />

            <TextView
