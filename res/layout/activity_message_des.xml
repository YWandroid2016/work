<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".MessageDesActivity" >

    <com.example.happyfishing.view.ActionBarView
        android:id="@+id/actionBar_messageDes"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/x10"
        android:background="#fff"
        android:orientation="vertical" >

	
    
    <TextView
        android:id="@+id/title_message_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_big"
        android:layout_marginTop="@dimen/x2"
        android:text="VIP会员即将到期" />
    <TextView
        android:id="@+id/date_message_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x2"
        android:textSize="@dimen/font_small"
        android:hint="2016.3.22" />
    <TextView
        android:id="@+id/des_message_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:textSize="@dimen/font_middle"
        android:text="月度VIP会员身份即将离你远去。" />
    <TextView
        android:id="@+id/after_message_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:textSize="@dimen/font_middle"
        android:text="到期时间：2016.3.26" />
    <TextView
        android:id="@+id/content_message_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:textSize="@dimen/font_middle"
        android:text="你即将失去30元享黑坑门票费、预约钓位等VIP特权" />
    
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/gray_bg" />
    
    <Button
        android:id="@+id/btn_messageDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:background="@drawable/circle_app"
        android:padding="@dimen/x15"
        android:textColor="#fff"
        android:text="立即续费" />

</LinearLayout>
