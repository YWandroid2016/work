<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical" >

    <com.example.happyfishing.view.ActionBarView
        android:id="@+id/actionBar_payForget"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:background="#fff"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edt_payForget_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:background="#fff"
            android:hint="请输入手机号"
            android:paddingLeft="@dimen/x10" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:background="@color/gray_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edt_payForget_pass"
                android:layout_width="0dp"
                android:layout_height="@dimen/x50"
                android:layout_weight="1"
                android:background="#fff"
                android:hint="请输入验证码"
                android:paddingLeft="@dimen/x10" />

            <com.example.happyfishing.view.TimeButton
                android:id="@+id/btn_payForget_verification "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x10"
                android:background="@drawable/tbtn_background"
                android:text="获取验证码"
                android:textColor="@color/appcolor" />
        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:background="@color/gray_bg" />
        
        <EditText
            android:id="@+id/edt_payForget_new"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:background="#fff"
            android:hint="请输入6位数字密码"
            android:paddingLeft="@dimen/x10" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_payForget"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/circle_app"
        android:text="提交"
        android:textColor="#fff"
        android:textSize="@dimen/big_font" />

</LinearLayout>