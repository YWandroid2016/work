<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical" >

    <com.example.happyfishing.view.ActionBarView
        android:id="@+id/actionbar_userinfo_alter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45" />

    <LinearLayout
        android:id="@+id/lin_userinfo_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x15"
        android:background="#fff"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/ed_userinfo_newphone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:background="#fff"
            android:gravity="center_vertical"
            android:hint="请输入新手机号"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:background="@color/gray_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x15" >

            <EditText
                android:id="@+id/ed_userinfo_newyan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fff"
                android:hint="请输入验证码" />

            <com.example.happyfishing.view.TimeButton
                android:id="@+id/btn_userinfo_verification_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x15"
                android:background="@drawable/tbtn_background"
                android:text="获取验证码"
                android:textColor="@color/appcolor" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_userinfo_over"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/circle_app"
        android:text="完成"
        android:textColor="#fff" />

</LinearLayout>