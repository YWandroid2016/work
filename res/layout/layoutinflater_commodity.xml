<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/circle_white" 
    android:gravity="center">

    <com.example.happyfishing.image.ImageRequestView
        android:id="@+id/img_commodity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/load_loading" />

    <TextView android:id="@+id/tv_commodity_sumary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x5"
        android:maxLines="2"
        android:textSize="@dimen/font_middle"
        android:text="这个东西贼好这个东西贼好这个东西贼好这个东西贼好这个东西贼好这个东西贼好这个东西贼好东西贼好这个东西贼好这个东西贼好东西贼好这个东西贼好这个东西贼好东西贼好这个东西贼好这个东西贼好"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginRight="@dimen/x5"
        android:layout_marginBottom="@dimen/x5"
        android:gravity="center">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_middle"
            android:text="￥"
            />
        <TextView 
            android:id="@+id/tv_commodity_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/appcolor"
            android:textSize="@dimen/font_middle"
            android:text="16.5"
            />
        <TextView 
            android:id="@+id/tv_commodity_sellNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_middle"
            android:text="2222人付款"
            />
    </LinearLayout>
</LinearLayout>