<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderResultActivity" >

    <com.example.happyfishing.view.ActionBarView
        android:id="@+id/actionbar_result"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" 
        android:orientation="vertical">
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-80dp"
            android:layout_marginBottom="@dimen/x20"
            android:src="@drawable/ic_result_success" />

        <TextView
            android:id="@+id/tv_orderresult_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="支付成功 获得300积分"
            android:textColor="@color/appcolor"
            android:layout_marginBottom="@dimen/x10"
            android:textSize="@dimen/font_default"
            android:gravity="center"/>

        <TextView 
            android:id="@+id/tv_orderresult_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_middle"
            android:hint="可在“我的订单”中查看"
            android:visibility="gone"
            />
    </LinearLayout>

</LinearLayout>