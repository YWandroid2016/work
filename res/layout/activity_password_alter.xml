<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_passwordalter_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    tools:context=".PasswordAlterActivity" >

    <com.example.happyfishing.view.ActionBarView
        android:id="@+id/actionBar_passwordalter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:background="#fff"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_passwordalter_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_passwordalter_yuanmima"
                android:layout_width="@dimen/x70"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/default_font"
                android:text="当前密码：" />

            <EditText
                android:id="@+id/edt_passwordalter_old"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:hint="请输入原始密码"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:singleLine="true" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/gray_bg" />

        <LinearLayout
            android:id="@+id/ll_passwordalter_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_passwordalter_yuanmima"
                android:layout_width="@dimen/x70"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/default_font"
                android:text="新密码：" />

            <EditText
                android:id="@+id/edt_passwordalter_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:hint="6-12个字符，可由中英文、数字组成"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:singleLine="true" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/gray_bg" />

        <LinearLayout
            android:id="@+id/ll_passwordalter_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_passwordalter_yuanmima"
                android:layout_width="@dimen/x70"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/default_font"
                android:text="确认密码：" />

            <EditText
                android:id="@+id/edt_passwordalter_newconfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:hint="请再次输入新密码"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_passwordalter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_margin="@dimen/x10"
        android:background="@drawable/circle_app"
        android:text="确定"
        android:textColor="@color/white" />

</LinearLayout>